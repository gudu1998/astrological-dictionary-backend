{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"resolveJsonModule": true
	},
	"include": ["./src", "uploads/index.ts"]
}
